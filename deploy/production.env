# Production Environment Configuration

# Application Settings
APP_ENV=production
APP_NAME=agentic-scent-analytics
APP_VERSION=1.0.0
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://agentic_user:${DB_PASSWORD}@postgres:5432/agentic_scent_prod
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Redis Configuration  
REDIS_URL=redis://redis:6379/0
REDIS_POOL_SIZE=10

# LLM Provider Configuration
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
LLM_DEFAULT_PROVIDER=openai
LLM_DEFAULT_MODEL=gpt-4
LLM_REQUEST_TIMEOUT=30

# Performance Configuration
TASK_POOL_MIN_WORKERS=4
TASK_POOL_MAX_WORKERS=16
CACHE_MEMORY_SIZE=2000
CACHE_TTL_SECONDS=600

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
LOG_FORMAT=structured
HEALTH_CHECK_INTERVAL=30

# Security Configuration
SECRET_KEY=${SECRET_KEY}
ALLOWED_HOSTS=*.yourdomain.com,127.0.0.1,localhost
CORS_ALLOWED_ORIGINS=${CORS_ORIGINS}
SSL_REQUIRED=true

# Factory Configuration
DEFAULT_SAMPLING_RATE=10.0
MAX_SENSOR_CHANNELS=128
BATCH_TIMEOUT_HOURS=24
ALERT_THRESHOLD=0.85

# Scaling Configuration
AUTO_SCALING_ENABLED=true
SCALE_UP_THRESHOLD=0.8
SCALE_DOWN_THRESHOLD=0.3
MAX_CONCURRENT_BATCHES=10

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30